<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="Topic Overview:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvTitle"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"/>
    <TextView
            android:text="Topic Description goes here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvDesc"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle" android:layout_marginTop="32dp" android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>
    <Button
            android:text="Begin"
            android:layout_width="152dp"
            android:layout_height="wrap_content" android:id="@+id/btnBegin" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:background="@android:color/darker_gray"/>
</android.support.constraint.ConstraintLayout>