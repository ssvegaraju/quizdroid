<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="Topics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvTopics"
            app:layout_constraintEnd_toStartOf="@+id/guideline" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="@+id/guideline"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2" android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>
    <Button
            android:text="Math"
            android:layout_height="wrap_content" android:id="@+id/btnMath" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/tvTopics" app:layout_constraintEnd_toStartOf="@+id/guideline"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:layout_width="141dp"/>
    <Button
            android:text="Physics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnPhys"
            app:layout_constraintTop_toBottomOf="@+id/btnMath" app:layout_constraintEnd_toStartOf="@+id/guideline"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline" android:layout_marginTop="32dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"/>
    <Button
            android:text="Marvel"
            android:layout_width="138dp"
            android:layout_height="wrap_content" android:id="@+id/btnMarvel" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/btnPhys" app:layout_constraintEnd_toStartOf="@+id/guideline"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline" app:layout_constraintGuide_begin="205dp"
                                          android:orientation="vertical"/>
</android.support.constraint.ConstraintLayout>