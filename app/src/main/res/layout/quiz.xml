<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <android.support.v7.widget.ContentFrameLayout
            android:layout_width="match_parent"
            android:id="@+id/container"
            android:layout_height="match_parent">

        <fragment android:layout_width="match_parent" android:layout_height="match_parent"
                  android:name="com.dichotomyllc.quizdroid.QuizOverviewFragment"
        />
    </android.support.v7.widget.ContentFrameLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvQuestion"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            tools:text="Question 1: haha yes"/>
    <RadioGroup
            android:layout_width="0dp"
            android:layout_height="206dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/tvQuestion" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp" android:id="@+id/radioGroup"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp">
        <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/rbtn1" android:layout_weight="1"
                tools:text="Answer 1" android:textSize="24sp"/>
        <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/rbtn2" android:layout_weight="1"
                tools:text="Answer 2" android:textSize="24sp"/>
        <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/rbtn3" android:layout_weight="1"
                tools:text="Answer 3" android:textSize="24sp"/>
        <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/rbtn4" android:layout_weight="1"
                tools:text="Answer 4" android:textSize="24sp"/>
    </RadioGroup>
    <Button
            android:text="Submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSubmit"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup" android:visibility="invisible"/>
    <Button
            android:text="Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnProceed" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:visibility="invisible"/>
    <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvAnswerDisp"
            tools:text="You have 5 out of 10 correct!" android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:visibility="invisible" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/btnSubmit" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/btnProceed"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.401"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline2"
            android:layout_marginRight="8dp" android:textSize="30sp"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline2" app:layout_constraintGuide_begin="205dp"
                                          android:orientation="vertical"/>
</android.support.constraint.ConstraintLayout>